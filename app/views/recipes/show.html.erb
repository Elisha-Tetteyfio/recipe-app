<p style="color: green"><%= notice %></p>

<div class="container w-75">
  <h2 class="text-center">
    <%= @recipe.name %>
  </h2>
  <p>
    <strong>Preparation time:
      <%= @recipe.preparation_time %>
    </strong>
  </p>
  <p>
    <strong>Cooking time:
      <%= @recipe.cooking_time %>
    </strong>
  </p>
  <p>
    <strong>Steps go here ... </strong>
  </p>

  <% if can? :manage, @recipe %>
    <%= link_to "Add new food", new_food_path %>
  <% end %>

</div>